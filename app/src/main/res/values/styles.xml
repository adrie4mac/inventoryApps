    </style>

    <style name="Title3" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Subtitle2" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">12sp</item>
