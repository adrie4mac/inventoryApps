<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@android:color/background_dark</item>
    </style>

    <style name="PrimaryAppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="ToolbarBackIcon" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/Headline3</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="homeAsUpIndicator">@drawable/vector_back_button</item>
    </style>

    <style name="Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Heading1" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Heading2" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Heading3" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Title1" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Title2" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">14sp</item>
